CREATE TABLE IF NOT EXISTS leaderboards
(
    id     INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
    name   TEXT,
    region TEXT
);

selectAll:
SELECT name
FROM leaderboards
WHERE region = :region COLLATE NOCASE
ORDER BY id;

insert:
INSERT INTO leaderboards (name, region)
VALUES (:name, :region);

deleteAllByRegion:
DELETE
FROM leaderboards
WHERE region = :region COLLATE NOCASE;
