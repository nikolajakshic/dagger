<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".matchstats.overview.OverviewFragment">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="16dp">

            <include
                android:id="@+id/container_minimap"
                layout="@layout/item_match_stats_minimap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3" />

            <include
                android:id="@+id/container_match_stats_info"
                layout="@layout/item_match_stats_match_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="4" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvRadiantName"
            style="@style/MatchStatsTeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:drawableEnd="@drawable/ic_trophy"
            tools:drawableRight="@drawable/ic_trophy"
            tools:text="The Radiant" />

        <include
            android:id="@+id/player0"
            layout="@layout/item_match_stats" />

        <include layout="@layout/item_divider" />

        <include
            android:id="@+id/player1"
            layout="@layout/item_match_stats" />

        <include layout="@layout/item_divider" />

        <include
            android:id="@+id/player2"
            layout="@layout/item_match_stats" />

        <include layout="@layout/item_divider" />

        <include
            android:id="@+id/player3"
            layout="@layout/item_match_stats" />

        <include layout="@layout/item_divider" />

        <include
            android:id="@+id/player4"
            layout="@layout/item_match_stats" />

        <TextView
            android:id="@+id/tvDireName"
            style="@style/MatchStatsTeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:drawableEnd="@drawable/ic_trophy"
            tools:drawableRight="@drawable/ic_trophy"
            tools:text="The Dire" />

        <include
            android:id="@+id/player5"
            layout="@layout/item_match_stats" />

        <include layout="@layout/item_divider" />

        <include
            android:id="@+id/player6"
            layout="@layout/item_match_stats" />

        <include layout="@layout/item_divider" />

        <include
            android:id="@+id/player7"
            layout="@layout/item_match_stats" />

        <include layout="@layout/item_divider" />

        <include
            android:id="@+id/player8"
            layout="@layout/item_match_stats" />

        <include layout="@layout/item_divider" />

        <include
            android:id="@+id/player9"
            layout="@layout/item_match_stats" />
    </LinearLayout>
</ScrollView>